    font-size: 34rpx;
    padding: var(--spacing-xl) var(--spacing-xxl);
    padding-right: 140rpx;
  }

  .progress-visual-card {
    padding: var(--spacing-xxl);
  }

  .progress-percentage-value {
    font-size: 40rpx;
  }

  .progress-bar-track {
    height: 28rpx;
  }
}

/* 动画增强 */
.form-item {
  animation: fadeInUp 0.4s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.progress-visual-card {
  animation: slideIn 0.5s ease-out;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateX(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.progress-bar-fill {
  position: relative;
  overflow: hidden;
}

.progress-bar-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.3) 50%, transparent 100%);
  animation: progressShine 2s infinite;
}

@keyframes progressShine {
  0% {
    left: -100%;
  }
  100% {
    left: 100%;
  }
}

/* 输入框聚焦动画 */
.form-input-enhanced {
  position: relative;
}

.form-input-enhanced:focus {
  animation: inputFocus 0.3s ease-out;
}

@keyframes inputFocus {
  0% {
    box-shadow: 0 0 0 0 var(--primary-light);
  }
  50% {
    box-shadow: 0 0 0 8rpx var(--primary-light);
  }
  100% {
    box-shadow: 0 0 0 6rpx var(--primary-light);
  }
}

/* 进度百分比徽章动画 */
.progress-percentage-badge {
  animation: badgePulse 0.6s ease-out;
}

@keyframes badgePulse {
  0% {
    transform: scale(0.9);
    opacity: 0.8;
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 里程碑到达动画 */
.milestone.reached {
  animation: milestoneReach 0.5s ease-out;
}

@keyframes milestoneReach {
  0% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  50% {
    transform: scale(1.3);
  }
  100% {
    transform: scale(1.2);
    opacity: 1;
  }
}

