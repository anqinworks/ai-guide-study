/* pages/answer/answer.wxss */

.container {
  padding: 40rpx 32rpx;
  background-color: var(--background-color);
  min-height: 100vh;
}

/* 进度条区域 */
.progress-section {
  margin-bottom: 40rpx;
}

.progress-text {
  display: block;
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
  text-align: center;
}

.progress {
  width: 100%;
  height: 12rpx;
  background-color: #F0F0F0;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background: linear-gradient(90deg, var(--primary-color) 0%, #FF9500 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

/* 问题卡片 */
.question-card {
  background-color: var(--card-background);
  border-radius: 20rpx;
  padding: 48rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.question-card:active {
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.12);
}

.question {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  color: var(--text-primary);
  line-height: 1.5;
}

/* 选项容器 */
.options {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 选项样式 */
.option {
  padding: 32rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 16rpx;
  font-size: 32rpx;
  color: var(--text-primary);
  cursor: pointer;
  transition: all 0.3s ease;
  line-height: 1.6;
  background-color: var(--card-background);
  position: relative;
  overflow: hidden;
}

.option::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 122, 69, 0.05);
  transform: scaleX(0);
  transform-origin: left;
  transition: transform 0.3s ease;
  z-index: 0;
}

.option:hover::before {
  transform: scaleX(1);
}

.option:hover {
  border-color: var(--primary-color);
  background-color: var(--primary-light);
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.option:active {
  transform: translateY(0) scale(0.99);
  transition: transform 0.1s;
}

.option.selected {
  border-color: var(--primary-color);
  background-color: var(--primary-light);
  box-shadow: 0 0 0 4rpx rgba(255, 122, 69, 0.2);
  font-weight: 500;
}

.option.selected::before {
  transform: scaleX(1);
}

.option.correct {
  border-color: var(--success-color);
  background-color: #F6FFED;
  box-shadow: 0 0 0 4rpx rgba(82, 196, 26, 0.2);
}

.option.wrong {
  border-color: var(--error-color);
  background-color: #FFF2F0;
  box-shadow: 0 0 0 4rpx rgba(255, 77, 79, 0.2);
}

/* 按钮组 */
.button-group {
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
}

/* 按钮样式 */
.btn {
  width: 100%;
  padding: 28rpx;
  border-radius: 16rpx;
  font-size: 34rpx;
  font-weight: 600;
  text-align: center;
  margin: 0;
  transition: all 0.3s ease;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.submit-btn {
  background: linear-gradient(135deg, #FF7A45 0%, #FF5722 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(255, 122, 69, 0.3);
}

.submit-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(255, 122, 69, 0.4);
}

.submit-btn:active {
  transform: translateY(0);
  box-shadow: 0 2rpx 8rpx rgba(255, 122, 69, 0.4);
}

.submit-btn:disabled {
  background: linear-gradient(135deg, #D9D9D9 0%, #BFBFBF 100%);
  color: #999;
  box-shadow: none;
  cursor: not-allowed;
  transform: none;
}

/* 解释区域 */
.explanation-section {
  background-color: var(--card-background);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.explanation-title {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 20rpx;
}

.explanation {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}

/* 响应式设计 */
@media (max-width: 375rpx) {
  .container {
    padding: 32rpx 24rpx;
  }
  
  .question-card {
    padding: 32rpx;
  }
  
  .question {
    font-size: 32rpx;
    margin-bottom: 32rpx;
  }
  
  .option {
    padding: 28rpx;
    font-size: 28rpx;
  }
  
  .btn {
    font-size: 30rpx;
    padding: 24rpx;
  }
}