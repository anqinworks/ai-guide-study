/* pages/answer/answer.wxss */

/* CSS变量定义 - 使用全局变量 */
page {
  /* 继承全局变量，可在此覆盖特定页面变量 */
}

.container {
  padding: var(--spacing-xl) var(--spacing-xl);
  background: linear-gradient(135deg, var(--background-color) 0%, #FFFAF0 100%);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 进度条区域 */
.progress-section {
  margin-bottom: 40rpx;
}

.progress-text {
  display: block;
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
  text-align: center;
}

.progress {
  width: 100%;
  height: 12rpx;
  background-color: #F0F0F0;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background: linear-gradient(90deg, var(--primary-color) 0%, #FF9500 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

/* 问题卡片 - 优化布局和视觉层次 */
.question-card {
  background-color: var(--card-background);
  border-radius: var(--radius-xxl);
  padding: var(--spacing-xxl);
  margin-bottom: var(--spacing-xl);
  box-shadow: var(--shadow-md);
  transition: all var(--transition-base);
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

.question-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, var(--primary-color) 0%, #FF9500 100%);
}

.question-card:active {
  box-shadow: var(--shadow-lg);
  transform: translateY(-2rpx);
}

/* 题目头部 */
.question-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 32rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.question-badge {
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-primary);
  flex-shrink: 0;
}

.question-number {
  font-size: 24rpx;
  font-weight: bold;
  color: #FFFFFF;
}

.question-label {
  font-size: 30rpx;
  color: var(--text-secondary);
  font-weight: 600;
  letter-spacing: 1rpx;
}

/* 题目内容区域 */
.question-content {
  margin-bottom: 48rpx;
  min-height: 120rpx;
  max-height: 400rpx;
}

.question-scroll {
  width: 100%;
  height: 100%;
  max-height: 400rpx;
}

.question-text {
  display: block;
  font-size: 34rpx;
  font-weight: 500;
  color: var(--text-primary);
  line-height: 2.0;
  word-wrap: break-word;
  word-break: break-all;
  letter-spacing: 0.5rpx;
}

/* 选项区域标题 */
.options-section {
  margin-top: 48rpx;
  padding-top: 32rpx;
  border-top: 2rpx solid #f0f0f0;
}

.options-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.options-icon {
  font-size: 28rpx;
}

.options-label {
  font-size: 30rpx;
  color: var(--text-primary);
  font-weight: 600;
}

/* 选项容器 */
.options {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 选项样式 */
.option {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius-lg);
  cursor: pointer;
  transition: all var(--transition-base);
  background-color: var(--card-background);
  position: relative;
  overflow: hidden;
  margin-bottom: var(--spacing-md);
  box-shadow: var(--shadow-sm);
  min-height: 80rpx;
}

.option-marker {
  width: 48rpx;
  height: 48rpx;
  background-color: #F5F5F5;
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: all var(--transition-base);
}

.option-letter {
  font-size: 24rpx;
  font-weight: bold;
  color: var(--text-secondary);
}

.option.selected .option-marker {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
}

.option.selected .option-letter {
  color: #FFFFFF;
}

.option-content {
  flex: 1;
  position: relative;
  z-index: 1;
  min-height: 48rpx;
  display: flex;
  align-items: center;
}

.option-scroll {
  width: 100%;
  max-height: 200rpx;
}

.option-text {
  display: block;
  font-size: 30rpx;
  color: var(--text-primary);
  line-height: 1.8;
  word-wrap: break-word;
  letter-spacing: 0.3rpx;
}

.option-check {
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(135deg, var(--success-color) 0%, #73D13D 100%);
  border-radius: var(--radius-circle);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  box-shadow: var(--shadow-success);
  animation: scaleIn 0.3s ease-out;
}

.check-icon {
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: bold;
}

.option::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 122, 69, 0.05);
  transform: scaleX(0);
  transform-origin: left;
  transition: transform 0.3s ease;
  z-index: 0;
}

.option:hover::before {
  transform: scaleX(1);
}

.option:hover {
  border-color: var(--primary-color);
  background-color: var(--primary-light);
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.option:active {
  transform: translateY(0) scale(0.99);
  transition: transform 0.1s;
}

.option.selected {
  border-color: var(--primary-color);
  background-color: var(--primary-light);
  box-shadow: 0 0 0 4rpx rgba(255, 122, 69, 0.2), var(--shadow-md);
  font-weight: 500;
  transform: translateY(-2rpx);
}

.option.selected::before {
  transform: scaleX(1);
}

.option.correct {
  border-color: var(--success-color);
  background-color: #F6FFED;
  box-shadow: 0 0 0 4rpx rgba(82, 196, 26, 0.2);
}

.option.wrong {
  border-color: var(--error-color);
  background-color: #FFF2F0;
  box-shadow: 0 0 0 4rpx rgba(255, 77, 79, 0.2);
}

/* 按钮组 - 优化布局，确保固定在底部 */
.button-group {
  display: flex;
  justify-content: center;
  margin-top: auto;
  padding-top: 40rpx;
  padding-bottom: env(safe-area-inset-bottom);
  flex-shrink: 0;
  position: sticky;
  bottom: 0;
  background: linear-gradient(to top, var(--background-color) 0%, transparent 100%);
  padding-top: 60rpx;
}

/* 按钮样式 */
.btn {
  width: 100%;
  padding: 28rpx;
  border-radius: 16rpx;
  font-size: 34rpx;
  font-weight: 600;
  text-align: center;
  margin: 0;
  transition: all 0.3s ease;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.submit-btn {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: white;
  box-shadow: var(--shadow-primary);
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  min-height: 88rpx;
}

.btn-icon {
  font-size: 32rpx;
  font-weight: bold;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
}

.submit-btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.3);
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.submit-btn:active::before {
  width: 300rpx;
  height: 300rpx;
}

.submit-btn:active {
  transform: translateY(0) scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(255, 122, 69, 0.4);
}

.submit-btn:disabled {
  background: linear-gradient(135deg, #D9D9D9 0%, #BFBFBF 100%);
  color: #999;
  box-shadow: none;
  cursor: not-allowed;
  transform: none;
  opacity: 0.6;
}

/* 解释区域 */
.explanation-section {
  background-color: var(--card-background);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.explanation-title {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 20rpx;
}

.explanation {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}

/* 富文本内容样式增强 */
rich-text {
  word-wrap: break-word;
  word-break: break-all;
}

/* 代码块容器 */
rich-text .code-block {
  display: block;
  margin: 24rpx 0;
}

rich-text code {
  font-family: 'Consolas', 'Monaco', 'Courier New', monospace;
}

rich-text pre {
  margin: 24rpx 0;
  padding: 24rpx;
  background-color: #282c34;
  border-radius: 12rpx;
  overflow-x: auto;
}

rich-text ul,
rich-text ol {
  margin: 16rpx 0;
  padding-left: 40rpx;
}

rich-text li {
  margin: 8rpx 0;
  line-height: 1.8;
}

rich-text p {
  margin: 12rpx 0;
  line-height: 1.8;
}

rich-text blockquote {
  margin: 16rpx 0;
  padding: 16rpx 24rpx;
  border-left: 4rpx solid #FF7A45;
  background-color: #f8f9fa;
  border-radius: 4rpx;
}

/* 代码块样式 */
.code-block {
  background-color: #282c34;
  color: #abb2bf;
  padding: 24rpx;
  border-radius: 12rpx;
  margin: 24rpx 0;
  overflow-x: auto;
  font-family: 'Consolas', 'Monaco', 'Courier New', monospace;
  font-size: 28rpx;
  line-height: 1.6;
}

.inline-code {
  background-color: #f5f5f5;
  color: #e83e8c;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  font-family: 'Consolas', 'Monaco', 'Courier New', monospace;
  font-size: 28rpx;
}

/* LaTeX公式样式 */
.latex-formula {
  display: inline-block;
  padding: 8rpx 12rpx;
  background-color: #f8f9fa;
  border-radius: 6rpx;
  font-family: 'Times New Roman', serif;
  font-style: italic;
  margin: 0 4rpx;
}

.latex-formula.block {
  display: block;
  text-align: center;
  margin: 24rpx 0;
  padding: 16rpx;
}

/* 文本格式化样式 */
rich-text strong {
  font-weight: bold;
  color: #333;
}

rich-text em {
  font-style: italic;
  color: #666;
}

rich-text ul,
rich-text ol {
  margin: 16rpx 0;
  padding-left: 40rpx;
}

rich-text li {
  margin: 8rpx 0;
  line-height: 1.6;
}

/* 响应式设计 */
@media (max-width: 375rpx) {
  .container {
    padding: 32rpx 24rpx;
  }
  
  .question-card {
    padding: 32rpx;
  }
  
  .question-text {
    font-size: 32rpx;
  }
  
  .option {
    padding: 28rpx;
  }
  
  .option-text {
    font-size: 28rpx;
  }
  
  .btn {
    font-size: 30rpx;
    padding: 24rpx;
  }
  
  .code-block {
    font-size: 24rpx;
    padding: 20rpx;
  }
}