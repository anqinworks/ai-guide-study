/* pages/user/user.wxss */

.container {
  padding: 40rpx 32rpx;
  background-color: var(--background-color);
  min-height: 100vh;
}

/* 用户信息区域 */
.user-info-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 64rpx;
  padding: 48rpx;
  background: linear-gradient(135deg, var(--primary-light) 0%, #FFF7E6 100%);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 122, 69, 0.15);
  transition: all 0.3s ease;
}

.user-info-section:active {
  box-shadow: 0 6rpx 20rpx rgba(255, 122, 69, 0.2);
}

/* 头像样式 */
.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: var(--radius-circle);
  margin-bottom: var(--spacing-lg);
  box-shadow: var(--shadow-md);
  border: 4rpx solid var(--primary-color);
  transition: all var(--transition-base);
  object-fit: cover;
  background-color: var(--primary-light);
}

.avatar:active {
  transform: scale(1.05);
  box-shadow: 0 6rpx 20rpx rgba(255, 122, 69, 0.3);
}

/* 昵称样式 */
.nickname {
  font-size: 38rpx;
  font-weight: bold;
  color: var(--primary-color);
  text-shadow: 0 2rpx 4rpx rgba(255, 122, 69, 0.2);
  margin-bottom: 12rpx;
}

/* 用户描述 */
.user-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  text-align: center;
}

/* 菜单区域 */
.menu-section {
  background-color: var(--card-background);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  transition: all 0.3s ease;
}

.menu-section:active {
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.12);
}

/* 菜单项样式 */
.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid var(--border-color);
  cursor: pointer;
  transition: all 0.3s ease;
  background-color: var(--card-background);
  position: relative;
  overflow: hidden;
}

.menu-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 8rpx;
  height: 100%;
  background-color: var(--primary-color);
  transform: scaleY(0);
  transition: transform 0.3s ease;
}

.menu-item:hover {
  background-color: var(--primary-light);
  padding-left: 40rpx;
}

.menu-item:hover::before {
  transform: scaleY(1);
}

.menu-item:last-child {
  border-bottom: none;
}

/* 菜单图标 */
.menu-icon {
  font-size: 36rpx;
  margin-right: 24rpx;
  color: var(--primary-color);
  transition: all 0.3s ease;
}

.menu-item:hover .menu-icon {
  transform: scale(1.2);
}

/* 菜单文本 */
.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: var(--text-primary);
  font-weight: 500;
  transition: all 0.3s ease;
}

.menu-item:hover .menu-text {
  color: var(--primary-color);
}

/* 菜单箭头 */
.menu-arrow {
  font-size: 28rpx;
  color: var(--text-secondary);
  transition: all 0.3s ease;
}

.menu-item:hover .menu-arrow {
  color: var(--primary-color);
  transform: translateX(8rpx);
}

/* 统计数据卡片 */
.stats-cards {
  display: flex;
  justify-content: space-around;
  gap: 24rpx;
  margin-bottom: 48rpx;
}

.stat-card {
  flex: 1;
  background-color: var(--card-background);
  padding: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s ease;
}

.stat-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 6rpx 20rpx rgba(255, 122, 69, 0.2);
}

.stat-card-value {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 8rpx;
}

.stat-card-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  text-align: center;
}

/* 分隔线 */
.divider {
  height: 16rpx;
  background-color: var(--background-color);
  border: none;
  margin: 0;
}

/* 退出登录按钮 */
.logout-btn {
  width: 100%;
  margin-top: 48rpx;
  padding: 28rpx;
  background: linear-gradient(135deg, var(--error-color) 0%, #FF7875 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(255, 77, 79, 0.3);
  transition: all 0.3s ease;
  cursor: pointer;
}

.logout-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(255, 77, 79, 0.4);
}

.logout-btn:active {
  transform: translateY(0);
  box-shadow: 0 2rpx 8rpx rgba(255, 77, 79, 0.4);
}

/* 登录表单样式 */
.login-section {
  background-color: var(--card-background);
  padding: 48rpx 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 48rpx;
}

.login-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: var(--primary-color);
  text-align: center;
  margin-bottom: 40rpx;
}

/* 微信登录按钮 */
.wx-login-btn {
  width: 100%;
  padding: 28rpx;
  background: linear-gradient(135deg, #07C160 0%, #00A854 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s ease;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.wx-login-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(7, 193, 96, 0.4);
}

.wx-login-btn:active {
  transform: translateY(0);
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.4);
}

.wx-login-icon {
  font-size: 36rpx;
}

.wx-login-text {
  font-size: 32rpx;
  font-weight: 600;
}



/* 用户ID样式 */
.user-id {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-top: 8rpx;
}

/* 学习统计卡片样式 */
.learning-stats-section {
  margin-bottom: var(--spacing-xxl);
}

.learning-stats-card {
  background: linear-gradient(135deg, var(--primary-color) 0%, #FF9500 100%);
  border-radius: var(--radius-xxl);
  padding: var(--spacing-xl) var(--spacing-xl);
  box-shadow: var(--shadow-primary);
  position: relative;
  overflow: hidden;
  margin-bottom: var(--spacing-xl);
}

.learning-stats-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  animation: shimmer 3s ease-in-out infinite;
}

@keyframes shimmer {
  0%, 100% { transform: rotate(0deg); }
  50% { transform: rotate(180deg); }
}

.stats-header {
  text-align: center;
  margin-bottom: var(--spacing-xl);
  position: relative;
  z-index: 1;
}

.stats-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: var(--spacing-sm);
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.stats-subtitle {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.stats-content {
  position: relative;
  z-index: 1;
}

.time-display {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin-bottom: var(--spacing-xl);
  padding: var(--spacing-lg) 0;
  background: rgba(255, 255, 255, 0.15);
  border-radius: var(--radius-lg);
  backdrop-filter: blur(10rpx);
}

.time-value {
  font-size: 64rpx;
  font-weight: bold;
  color: #FFFFFF;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  margin-right: var(--spacing-sm);
}

.time-unit {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-xl);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-lg);
  background: rgba(255, 255, 255, 0.15);
  border-radius: var(--radius-lg);
  backdrop-filter: blur(10rpx);
}

.stat-icon {
  font-size: 32rpx;
  margin-bottom: var(--spacing-sm);
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: var(--spacing-xs);
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.stat-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.85);
  text-align: center;
}

.progress-section {
  margin-top: var(--spacing-lg);
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-sm);
}

.progress-label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.progress-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #FFFFFF;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.progress-bar-wrapper {
  width: 100%;
  height: 12rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 6rpx;
  transition: width var(--transition-base);
}

/* 学习目标卡片样式 */
.learning-goal-card {
  background-color: var(--card-background);
  border-radius: var(--radius-xxl);
  padding: var(--spacing-xl);
  box-shadow: var(--shadow-md);
  position: relative;
  overflow: hidden;
}

.learning-goal-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, var(--primary-color) 0%, #FF9500 100%);
}

.goal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-xl);
  padding-bottom: var(--spacing-lg);
  border-bottom: 2rpx solid var(--border-color);
}

.goal-title {
  font-size: 34rpx;
  font-weight: bold;
  color: var(--text-primary);
}

.goal-edit-btn {
  font-size: 28rpx;
  color: var(--primary-color);
  padding: var(--spacing-sm) var(--spacing-lg);
  border-radius: var(--radius-md);
  background-color: var(--primary-light);
}

.goal-content {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
}

.goal-item {
  padding: var(--spacing-lg);
  background-color: #FAFAFA;
  border-radius: var(--radius-lg);
  border-left: 4rpx solid var(--primary-color);
}

.goal-info {
  margin-bottom: var(--spacing-md);
}

.goal-name {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
}

.goal-desc {
  display: block;
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}

.goal-progress {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

.goal-progress-bar {
  flex: 1;
  height: 8rpx;
  background-color: #F0F0F0;
  border-radius: 4rpx;
  overflow: hidden;
}

.goal-progress-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--primary-color) 0%, #FF9500 100%);
  border-radius: 4rpx;
  transition: width var(--transition-base);
}

.goal-progress-text {
  font-size: 24rpx;
  color: var(--text-secondary);
  font-weight: 600;
  min-width: 50rpx;
  text-align: right;
}

.no-goal {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-xxxl) var(--spacing-xl);
  text-align: center;
}

.no-goal-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: var(--spacing-xl);
}

.set-goal-btn {
  padding: var(--spacing-md) var(--spacing-xl);
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: white;
  border: none;
  border-radius: var(--radius-lg);
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: var(--shadow-primary);
}

/* 响应式设计 */
@media (max-width: 375rpx) {
  .container {
    padding: 32rpx 24rpx;
  }
  
  .user-info-section {
    padding: 32rpx;
    margin-bottom: 48rpx;
  }
  
  .avatar {
    width: 140rpx;
    height: 140rpx;
  }
  
  .nickname {
    font-size: 34rpx;
  }
  
  .stats-cards {
    flex-direction: column;
    gap: 16rpx;
  }
  
  .menu-item {
    padding: 28rpx;
  }
  
  .menu-text {
    font-size: 30rpx;
  }
  
  .logout-btn {
    font-size: 30rpx;
    padding: 24rpx;
  }
  
  .login-section {
    padding: 32rpx 24rpx;
  }
  
  .login-title {
    font-size: 36rpx;
    margin-bottom: 32rpx;
  }
  
  .checkin-card {
    padding: 32rpx 24rpx;
  }
  
  .checkin-title {
    font-size: 38rpx;
  }
  
  .checkin-subtitle {
    font-size: 24rpx;
  }
  
  .checkin-stat-value {
    font-size: 42rpx;
  }
  
  .checkin-stat-label {
    font-size: 22rpx;
  }
  
  .checkin-btn {
    padding: 24rpx;
    font-size: 30rpx;
  }
  
  .checkin-tips-text {
    font-size: 24rpx;
  }
}