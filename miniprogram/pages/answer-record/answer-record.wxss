/* pages/answer-record/answer-record.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

.header {
  padding: 30rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #e0e0e0;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.record-list {
  padding: 20rpx;
}

.record-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  position: relative;
}

.record-item:active {
  transform: scale(0.98);
}

.record-item:hover {
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.record-info {
  flex: 1;
}

.record-time {
  font-size: 24rpx;
  color: #999999;
  display: block;
  margin-bottom: 10rpx;
}

.record-topic {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  display: block;
}

.record-stats {
  text-align: right;
}

.stats-text {
  font-size: 24rpx;
  color: #666666;
  display: block;
  margin-bottom: 8rpx;
}

.accuracy {
  color: #FF7A45;
  font-weight: bold;
}

.real-time-stats {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  gap: 40rpx;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: #fafafa;
  border-radius: 12rpx;
  min-width: 120rpx;
  transition: all 0.3s ease;
}

.stat-item:active {
  transform: scale(0.95);
}

.stat-label {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.stat-value.correct {
  color: #52c41a;
}

.stat-value.wrong {
  color: #ff4d4f;
}

.record-content {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  animation: slideDown 0.3s ease;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.expanded-info {
  display: flex;
  gap: 40rpx;
}

.info-item {
  display: flex;
  align-items: center;
}

.label {
  font-size: 26rpx;
  color: #666666;
}

.value {
  font-size: 26rpx;
  font-weight: bold;
  margin-left: 8rpx;
}

.correct {
  color: #52c41a;
}

.wrong {
  color: #ff4d4f;
}

.detail-btn {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #FF7A45;
  font-weight: bold;
}

.arrow {
  margin-left: 8rpx;
  font-size: 28rpx;
}

.empty-state {
  text-align: center;
  padding: 100rpx 20rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999999;
  display: block;
  margin-bottom: 40rpx;
}

.go-answer-btn {
  background-color: #FF7A45;
  color: #ffffff;
  border-radius: 50rpx;
  font-size: 28rpx;
  padding: 20rpx 60rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(255, 122, 69, 0.3);
}

.go-answer-btn:active {
  transform: scale(0.95);
}

.load-more {
  text-align: center;
  padding: 30rpx;
  font-size: 28rpx;
  color: #999999;
}

.loading-text {
  color: #FF7A45;
}

.load-text {
  color: #FF7A45;
  cursor: pointer;
}

.no-more-text {
  color: #cccccc;
}

/* 加载中样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 100rpx 20rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  margin: 20rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 8rpx solid #f3f3f3;
  border-top: 8rpx solid #FF7A45;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

/* 空状态图标 */
.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}