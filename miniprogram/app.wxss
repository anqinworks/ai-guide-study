/* 全局重置 */
page, view, text, input, button, image, navigator, swiper, swiper-item, scroll-view {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

page {
  background-color: #F8F9FA;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  color: #333333;
}

/* 容器样式 */
.container {
  padding: 32rpx;
  box-sizing: border-box;
}

/* 按钮样式 */
.btn {
  background: linear-gradient(135deg, #FF7A45 0%, #FF5722 100%);
  color: white;
  padding: 24rpx 48rpx;
  border-radius: 16rpx;
  text-align: center;
  margin: 24rpx 0;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(255, 122, 69, 0.3);
  transition: all 0.3s ease;
  border: none;
}

.btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(255, 122, 69, 0.4);
}

.btn.secondary {
  background: linear-gradient(135deg, #1890FF 0%, #096DD9 100%);
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
}

.btn.secondary:active {
  box-shadow: 0 2rpx 8rpx rgba(24, 144, 255, 0.4);
}

/* 输入框样式 */
.input {
  border: 2rpx solid #E8E8E8;
  padding: 24rpx;
  border-radius: 16rpx;
  margin: 24rpx 0;
  font-size: 30rpx;
  background-color: #FFFFFF;
  transition: all 0.3s ease;
}

.input:focus {
  border-color: #FF7A45;
  box-shadow: 0 0 0 4rpx #FFEBE5;
}

/* 卡片样式 */
.card {
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  margin: 24rpx 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.card:active {
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.12);
}

/* 标题样式 */
.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #8C8C8C;
  margin-bottom: 32rpx;
}

/* 问题样式 */
.question {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
  color: #333333;
  line-height: 1.5;
}

/* 选项样式 */
.option {
  padding: 28rpx;
  border: 2rpx solid #E8E8E8;
  border-radius: 16rpx;
  margin: 16rpx 0;
  cursor: pointer;
  font-size: 30rpx;
  transition: all 0.3s ease;
  background-color: #FFFFFF;
}

.option:hover {
  border-color: #FF7A45;
  background-color: #FFEBE5;
}

.option.selected {
  border-color: #FF7A45;
  background-color: #FFEBE5;
  box-shadow: 0 0 0 4rpx rgba(255, 122, 69, 0.2);
}

.option.correct {
  border-color: #52C41A;
  background-color: #F6FFED;
  box-shadow: 0 0 0 4rpx rgba(82, 196, 26, 0.2);
}

.option.wrong {
  border-color: #FF4D4F;
  background-color: #FFF2F0;
  box-shadow: 0 0 0 4rpx rgba(255, 77, 79, 0.2);
}

/* 结果样式 */
.result {
  font-size: 40rpx;
  font-weight: bold;
  margin: 32rpx 0;
  text-align: center;
  color: #FF7A45;
}

/* 状态颜色 */
.correct {
  color: #52C41A;
}

.wrong {
  color: #FF4D4F;
}

/* 解释样式 */
.explanation {
  margin: 24rpx 0;
  color: #8C8C8C;
  font-size: 28rpx;
  line-height: 1.6;
}

/* 进度条样式 */
.progress {
  width: 100%;
  height: 12rpx;
  background-color: #F0F0F0;
  border-radius: 6rpx;
  margin: 24rpx 0;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background: linear-gradient(90deg, #FF7A45 0%, #FF9500 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

/* 标签样式 */
.tag {
  padding: 12rpx 24rpx;
  background-color: #FFEBE5;
  color: #FF7A45;
  border-radius: 24rpx;
  font-size: 24rpx;
  display: inline-block;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
}

/* 列表项样式 */
.list-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #E8E8E8;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
}

.list-item:last-child {
  border-bottom: none;
}

/* 分隔线样式 */
.divider {
  height: 1rpx;
  background-color: #E8E8E8;
  margin: 24rpx 0;
}

/* 加载动画 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 64rpx 0;
}

.loading::after {
  content: '';
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #E8E8E8;
  border-top: 4rpx solid #FF7A45;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 80rpx 0;
  color: #8C8C8C;
}

.empty-state-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-state-text {
  font-size: 28rpx;
}